@model IEnumerable<UserSong>

<h2>View Purchased Song History</h2>

@using (Html.BeginForm())
{
  <div>
    <span class="mb-3 h4">Select a user:</span>
    @Html.DropDownList("User")
    <input class="ml-3 h4" type="submit" />
  </div>
}

@if (Model != null)
{
  <div>
    <h2>User: @ViewBag.UserName</h2>
    <ul class="list-unstyled">
      @foreach (var userSong in Model)
      {
      <li class="h3"><span class="glyphicon glyphicon-music"></span> Title: <b><i>@userSong.Song.Name</i></b></li>
        <li>
          <ul class="list-unstyled">
            <li><span class="glyphicon glyphicon-user"> </span> Artist: <i><b>@userSong.Song.Artist.Name</b></i></li>
            <li><span class="glyphicon glyphicon-time"> </span> Purchased: <i><b>@userSong.PurchaseDate.ToShortDateString()</b></i></li>
            <li><span class="glyphicon glyphicon-piggy-bank"> </span> Price: <i><b>@userSong.Song.Price.ToString("c2")</b></i></li>
          </ul>
        </li>
      }
    </ul>
    @if (Model.Count() <= 0)
    {
      <h4>@ViewBag.UserName has not purchased any songs.</h4>
    }
  </div>
}

